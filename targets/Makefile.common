#Export common cflags (between softmodem and oaisim)
COMMON_CFLAGS		= \
	-D'FIRMWARE_VERSION="$(SVN_REV) - $(DATE_REV)"' \
	-Wall                       \
	-fno-strict-aliasing        \
	-O2                         \
